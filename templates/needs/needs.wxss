.goods-container {
  background-color: #f8f8f8;
}

.goods {
  background-color: white;
  color: #434346;
  border-bottom: 1rpx solid #e5e5e5;
}

.goods-v1{
  padding: 20rpx 10rpx;
  display: flex;
}

.goods-v1-left{
  width: 12%;
}

.goods-v1-left image {
  width: 70rpx;
  height: 70rpx;
  padding: 6rpx;
}

.goods-v1-right {
  width: 88%;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 28rpx;
  color: #4f5f84;
}

.time {
  font-size: 12px;
  color: #a9aaac;
  padding: 10rpx 0;
}

.goods-scroll {
  margin-top: 10rpx;
  height: 100px;
  white-space: nowrap;
  width: 100%;
}

.goods-v2 {
  display: flex;
}

.goods-image {
  width: 100px;
  height: 100px;
  padding: 0 3px;
  vertical-align: top;
}

.description {
  margin-top: 10rpx;
  font-size: 28rpx;
  display: block;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 5; /* 控制多少行后省略 */
  -webkit-box-orient: vertical;
  word-break: break-all; /* 追加这一行代码 */
}
