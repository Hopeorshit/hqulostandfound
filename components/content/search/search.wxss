
.product {
  display: flex;
  flex-wrap: wrap;
  font-size: 20rpx;
  /*弹性布局，超出自动伸缩  */
}

.product-box {
  width: 50%;
  box-sizing: border-box;
  padding: 10rpx;
}

.product-container {
  border: 1rpx solid #f5f6f7;
  background-color: white;
  border-radius: 20rpx;
}

.product-image {
  padding: 10rpx 5rpx;
  height: 340rpx;
  overflow: hidden;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.type-text{
  position: absolute;
  margin-left: 10rpx;
  margin-top: 10rpx;
  color: white;
  background-color: #ff6263;
  padding: 4rpx 10rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
}

.type-looking{
  background-color: orange
}

.product-title {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  padding-top: 20rpx; 
}

.product-title text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 12px;
}

.product-title image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.product-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}

.product-bottom-t1 {
  font-size: 24rpx;
  color: #ff6263;
  line-height: 40rpx;
}

.like-v{
 display: flex;
 align-items: center;
}

.like-v text{
  color: #a9aaac;
  padding: 0 4rpx;
}

.decription{
  font-size:24rpx; 
}