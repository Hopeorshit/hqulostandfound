.product {
  display: flex;
  flex-wrap: wrap;
  /*弹性布局，超出自动伸缩  */
}

.product-box {
  width: 50%;
  box-sizing: border-box;
  padding: 10rpx;
}

.product-container {
  border: 1rpx solid #f5f6f7;
  padding: 10rpx;
  background-color: white;
  border-radius: 20rpx;
}

.product-image {
  padding: 10rpx 5rpx;
  height: 340rpx;
  overflow: hidden;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.type-text {
  position: absolute;
  margin-left: 10rpx;
  margin-top: 10rpx;
  color: white;
  background-color: #ff6263;
  padding: 4rpx 10rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
}

.type-looking {
  background-color: orange;
}

.product-user {
  display: flex;
  align-items: center;
}

.product-user text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 12px;
  color: #a9aaac;
}

.product-user image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 6rpx;
}

.time {
  padding: 0 4rpx;
}

.product-des {
  font-size: 30rpx;
}
