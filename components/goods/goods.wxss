.select-top {
  position: fixed;
  z-index: 2;
  right: 0;
  left: 0;
  top: 0;
  display: flex;
  /* justify-content: flex-end; */
  background-color: white;
}

.select-top text {
  color: #ff6263;
  margin-right: 40rpx;
  padding: 20rpx;
}

.product {
  display: flex;
  flex-wrap: wrap;
  /*弹性布局，超出自动伸缩  */
}

.product-box {
  width: 50%;
  box-sizing: border-box;
  padding: 10rpx;
}

