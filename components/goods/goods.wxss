.product-container {
  border: 1rpx solid #f5f6f7;
  background-color: white;
  border-radius: 20rpx;
}

.product-image {
  height: 340rpx;
  /* width: 48%; */
}

.main-pic {
  width: 100%;
  height: 100%;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
}

.type-text {
  position: absolute;
  margin-top: 280rpx;
  color: white;
  background-color: #ff6263;
  padding: 4rpx 6rpx;
  font-size: 24rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.select {
  position: absolute;
  z-index: 1;
  width: 60rpx;
  height: 60rpx;
}

.type-looking {
  background-color: #ffc125;
}

.product-v {
  padding: 10rpx;
}

.product-des {
  font-size: 30rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-weight: bold;
}

.time {
  padding: 0 4rpx;
}

.product-user {
  padding: 10rpx 0;
  display: flex;
  align-items: center;
}

.product-user text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 12px;
  color: #a9aaac;
}

.product-user image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 6rpx;
}

.share {
  background-color: #ff6263;
  color: white;
  border-radius: 0;
  font-size: 30rpx;
  position: fixed;
  z-index: 2;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
}
