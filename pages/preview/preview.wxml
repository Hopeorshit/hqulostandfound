<!--pages/preview/preview.wxml-->
<view class='canvas-v'>
  <canvas canvas-id='myCanvas' style='width:100%;height:100%'></canvas>
</view>


<scroll-view scroll-y style='height:1000rpx' class='scroll'>
  <view class='preview'>
    <image src='{{tempFile}}' mode='widthFix'>
    </image>
  </view>
</scroll-view>

<button class='save' bindtap='onSave'>
  保存到相册
</button>